<!-- Views/Employee/CreateFarmer.cshtml -->
@model ST10252746_PROG7311_POE_PART_2.Models.RegisterFarmerViewModel
@{
    ViewData["Title"] = "Add New Farmer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


