<div class="container py-4">
    <div class="farmer-container">
        <!-- Sidebar Navigation -->
        <div class="farmer-sidebar d-none d-lg-block">
            <div class="sidebar-header">
                <h4>
                    <div class="farmer-avatar">
                        <i class="fa fa-user-circle"></i>
                    </div>
                    Farmer Portal
                </h4>
            </div>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Farmer/Products">My Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Farmer/CreateProduct">Add New Product</a>
                </li>
            </ul>
        </div>

        <!-- Mobile Sidebar Navigation (for small screens) -->
        <div class="d-lg-none mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="/Farmer/Products" class="list-group-item list-group-item-action active">My Products</a>
                        <a href="/Farmer/CreateProduct" class="list-group-item list-group-item-action">Add New Product</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="farmer-content">
            <!-- Page Title -->
            <div class="page-title">
                <h1>Delete Product</h1>
                <p>Remove this product from your inventory</p>
                <div class="page-divider"></div>
            </div>

            <!-- Delete Product Card -->
            <div class="delete-card">
                <div class="delete-card-header">
                    <h3><i class="fa fa-exclamation-triangle"></i> Are you sure you want to delete this product?</h3>
                </div>

                <div class="delete-card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="product-image-container">
                                @if (!string.IsNullOrEmpty(Model.ImageUrlPath))
                                {
                                    <img src="@Model.ImageUrlPath" alt="@Model.Name" class="product-image">
                                }
                                else
                                {
                                    <img src="/img/placeholder.jpg" alt="@Model.Name" class="product-image">
                                }
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="product-details">
                                <div class="row">
                                    <div class="col-sm-12 mb-3">
                                        <div class="detail-label">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </div>
                                        <div class="detail-value">
                                            <h5>@Html.DisplayFor(model => model.Name)</h5>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 mb-3">
                                        <div class="detail-label">
                                            @Html.DisplayNameFor(model => model.Category)
                                        </div>
                                        <div class="detail-value">
                                            @Html.DisplayFor(model => model.Category)
                                        </div>
                                    </div>

                                    <div class="col-sm-6 mb-3">
                                        <div class="detail-label">
                                            @Html.DisplayNameFor(model => model.ProductionDate)
                                        </div>
                                        <div class="detail-value">
                                            @Html.DisplayFor(model => model.ProductionDate)
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        <div class="detail-label">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </div>
                                        <div class="detail-value product-description">
                                            @Html.DisplayFor(model => model.Description)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="fa fa-info-circle"></i> This action cannot be undone. This will permanently delete the product from your inventory.
                    </div>

                    <form asp-action="DeleteProduct">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-buttons">
                            <a asp-action="Products" class="btn btn-farmer-secondary">
                                <i class="fa fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-farmer-danger">
                                <i class="fa fa-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>