<!-- Views/Farmer/DeleteProduct.cshtml -->
@model ST10252746_PROG7311_POE_PART_2.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-expand-lg bg-primary navbar-dark shadow-sm py-3 py-lg-0 px-3 px-lg-5">

    <a href="/" class="navbar-brand d-flex align-items-center">
        <img src="img/logo.png" alt="logo"
             style="height: 100px; width: 100px; margin-right: 10px;">
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav py-0">
            <a href="/" class="nav-item nav-link">Home</a>
            <a href="/farminghub" class="nav-item nav-link">Farming Hub</a>
            <a href="/marketplace" class="nav-item nav-link">Energy Marketplace</a>
            @if (User.IsInRole("Farmer"))
            {
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Farmer Portal</a>
                    <div class="dropdown-menu m-0">
                        <a href="/Farmer/Products" class="dropdown-item">My Products</a>
                        <a href="/Farmer/Profile" class="dropdown-item">My Profile</a>
                    </div>
                </div>
            }
            @if (User.IsInRole("Employee"))
            {
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Employee Portal</a>
                    <div class="dropdown-menu m-0">
                        <a href="/Employee/Farmers" class="dropdown-item">Manage Farmers</a>
                        <a href="/Employee/Products" class="dropdown-item">Manage Products</a>
                    </div>
                </div>
            }
            @if (User.IsInRole("Admin"))
            {
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Admin Portal</a>
                    <div class="dropdown-menu m-0">
                        <a href="/Admin/Employees" class="dropdown-item">Manage Employees</a>
                    </div>
                </div>
            }
        </div>
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>
<!-- Navbar End -->

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5" >
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Farmer Dashboard</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="/">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="/Farmer/Products">My Products</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Delete Product</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container py-4">
    <div class="farmer-container">
        <!-- Sidebar Navigation -->
        <div class="farmer-sidebar d-none d-lg-block">
            <div class="sidebar-header">
                <h4>
                    <div class="farmer-avatar">
                        <i class="fa fa-user-circle"></i>
                    </div>
                    Farmer Portal
                </h4>
            </div>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Farmer/Products">
                        <i class="fa fa-leaf"></i> My Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Farmer/CreateProduct">
                        <i class="fa fa-plus-circle"></i> Add New Product
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Farmer/Profile">
                        <i class="fa fa-user"></i> My Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Marketplace">
                        <i class="fa fa-store"></i> Marketplace
                    </a>
                </li>  
            </ul>
        </div>

        <!-- Mobile Sidebar Navigation (for small screens) -->
        <div class="d-lg-none mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="/Farmer/Products" class="list-group-item list-group-item-action active">
                            <i class="fa fa-leaf me-2"></i> My Products
                        </a>
                        <a href="/Farmer/CreateProduct" class="list-group-item list-group-item-action">
                            <i class="fa fa-plus-circle me-2"></i> Add New Product
                        </a>
                        <a href="/Farmer/Profile" class="list-group-item list-group-item-action">
                            <i class="fa fa-user me-2"></i> My Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content Area -->
        <div class="farmer-content">
            <!-- Page Title -->
            <div class="page-title">
                <h1>Delete Product</h1>
                <p>Remove this product from your inventory</p>
                <div class="page-divider"></div>
            </div>
            
            <!-- Delete Product Card -->
            <div class="delete-card">
                <div class="delete-card-header">
                    <h3><i class="fa fa-exclamation-triangle"></i> Are you sure you want to delete this product?</h3>
                </div>
                
                <div class="delete-card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="product-image-container">
                                @if (!string.IsNullOrEmpty(Model.ImageUrlPath))
                                {
                                    <img src="@Model.ImageUrlPath" alt="@Model.Name" class="product-image">
                                }
                                else
                                {
                                    <img src="/img/placeholder.jpg" alt="@Model.Name" class="product-image">
                                }
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <div class="product-details">
                                <div class="row">
                                    <div class="col-sm-12 mb-3">
                                        <div class="detail-label">
                                            <i class="fa fa-tag text-primary me-2"></i> @Html.DisplayNameFor(model => model.Name)
                                        </div>
                                        <div class="detail-value">
                                            <h5>@Html.DisplayFor(model => model.Name)</h5>
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-6 mb-3">
                                        <div class="detail-label">
                                            <i class="fa fa-folder text-primary me-2"></i> @Html.DisplayNameFor(model => model.Category)
                                        </div>
                                        <div class="detail-value">
                                            @Html.DisplayFor(model => model.Category)
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-6 mb-3">
                                        <div class="detail-label">
                                            <i class="fa fa-calendar-alt text-primary me-2"></i> @Html.DisplayNameFor(model => model.ProductionDate)
                                        </div>
                                        <div class="detail-value">
                                            @Html.DisplayFor(model => model.ProductionDate)
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-12">
                                        <div class="detail-label">
                                            <i class="fa fa-align-left text-primary me-2"></i> @Html.DisplayNameFor(model => model.Description)
                                        </div>
                                        <div class="detail-value product-description">
                                            @Html.DisplayFor(model => model.Description)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fa fa-info-circle me-2"></i> This action cannot be undone. This will permanently delete the product from your inventory.
                    </div>
                    
                    <form asp-action="DeleteProduct">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-buttons">
                            <a asp-action="Products" class="btn btn-farmer-secondary">
                                <i class="fa fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-farmer-danger">
                                <i class="fa fa-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>