            <div class="product-card" data-category="irrigation">
                <div class="product-image">
                    <img src="~/images/products/f5011c5c-bb33-4d97-81b0-5f7614f92d80_biomass.png" />  alt="Solar Powered Irrigation System">
                    <div class="energy-badge solar-badge">Solar</div>
                </div>
                <div class="product-content">
                    <div class="product-category">Smart Irrigation</div>
                    <h3 class="product-title">SolarFlow Irrigation Controller</h3>
                    <p class="product-description">Intelligent solar-powered irrigation system with automated scheduling and remote monitoring capabilities.</p>
                    <div class="product-specs">
                        <div class="spec-item">
                            <span class="spec-label">Coverage:</span>
                            <span class="spec-value">5 hectares</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Pump Power:</span>
                            <span class="spec-value">2kW</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Water Flow:</span>
                            <span class="spec-value">150L/min</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Smart Control:</span>
                            <span class="spec-value">Yes</span>
                        </div>
                    </div>
                    <div class="product-price">R 78,500</div>
                    <div class="product-rating">
                        <span class="stars">★★★★★</span>
                        <span class="rating-text">4.9 (203 reviews)</span>
                    </div>
                    <div class="product-actions">
                        <button class="btn btn-compare">Compare</button>
                        <button class="btn btn-contact">Contact Supplier</button>
                    </div>
                </div>
            </div>

            <!-- Wind/Solar Hybrid -->
            <div class="product-card" data-category="solar wind">
                <div class="product-image">
                    <img src="~/images/products/60b613e5-4659-443f-80af-0e8fa1e8ebba_windpower.png" />  alt="Hybrid Solar Wind System">
                    <div class="energy-badge wind-badge">Hybrid</div>
                </div>
                <div class="product-content">
                    <div class="product-category">Hybrid Energy</div>
                    <h3 class="product-title">HybridMax Solar-Wind System</h3>
                    <p class="product-description">Combined solar and wind energy system providing consistent power generation day and night, perfect for off-grid farms.</p>
                    <div class="product-specs">
                        <div class="spec-item">
                            <span class="spec-label">Solar Power:</span>
                            <span class="spec-value">2kW</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Wind Power:</span>
                            <span class="spec-value">1kW</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Battery:</span>
                            <span class="spec-value">10kWh</span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Daily Output:</span>
                            <span class="spec-value">15-25kWh</span>
                        </div>
                    </div>
                    <div class="product-price">R 125,000</div>
                    <div class="product-rating">
                        <span class="stars">★★★★☆</span>
                        <span class="rating-text">4.4 (67 reviews)</span>
                    </div>
                    <div class="product-actions">
                        <button class="btn btn-compare">Compare</button>
                        <button class="btn btn-contact">Contact Supplier</button>
                    </div>
                </div>
            </div>

            <!-- Battery Storage -->
            <div class="product-card" data-category="solar">
